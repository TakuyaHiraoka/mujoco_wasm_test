<mujoco model="draw_arm">
  <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>
  <size njmax="2000" nconmax="2000"/>

  <asset>
    <!-- 見た目用の簡易チェック柄 -->
    <texture name="grid" type="2d" builtin="checker"
             rgb1="0.90 0.90 0.90" rgb2="0.97 0.97 0.97"
             width="256" height="256"/>
    <material name="mat_canvas" texture="grid" texrepeat="6 6" rgba="1 1 1 1"/>
  </asset>

  <worldbody>
    <!-- 描画面（仮想キャンバス）: 上面が z=0 になるように box の中心を -0.005 に置く -->
    <body name="table" pos="0 0 0">
      <geom name="canvas"
            type="box" size="0.25 0.18 0.005"
            pos="0.23 0 -0.005"
            material="mat_canvas"
            rgba="1 1 1 1"
            contype="1" conaffinity="1"/>
    </body>

    <!-- ロボットアーム（平面3リンク）: ベースを z=0.12 に配置 -->
    <body name="base" pos="0 0 0.12">
      <geom name="base_geom" type="cylinder" size="0.03 0.02" rgba="0.30 0.30 0.30 1"/>

      <body name="link1" pos="0 0 0">
        <joint name="shoulder" type="hinge" axis="0 0 1" damping="1"
               limited="true" range="-3.1416 3.1416"/>
        <geom name="link1_geom" type="capsule" fromto="0 0 0 0.20 0 0"
              size="0.018" rgba="0.90 0.20 0.20 1"/>

        <body name="link2" pos="0.20 0 0">
          <joint name="elbow" type="hinge" axis="0 0 1" damping="1"
                 limited="true" range="-3.1416 3.1416"/>
          <geom name="link2_geom" type="capsule" fromto="0 0 0 0.20 0 0"
                size="0.016" rgba="0.20 0.90 0.20 1"/>

          <body name="link3" pos="0.20 0 0">
            <joint name="wrist" type="hinge" axis="0 0 1" damping="0.5"
                   limited="true" range="-3.1416 3.1416"/>
            <geom name="link3_geom" type="capsule" fromto="0 0 0 0.06 0 0"
                  size="0.014" rgba="0.20 0.20 0.90 1"/>

            <!-- ペン（z方向スライド） -->
            <body name="pen" pos="0.06 0 0">
              <!-- +z が上。負のqで下げられるよう range を負側に持たせる -->
              <joint name="pen_z" type="slide" axis="0 0 1" damping="5"
                     limited="true" range="-0.02 0.05"/>

              <!-- ペン胴: cylinder は center 指定なので、下向きに 0.055 ずらして長さ 0.11 -->
              <geom name="pen_body" type="cylinder" size="0.006 0.055"
                    pos="0 0 -0.055" rgba="0.07 0.07 0.07 1"/>

              <!-- ペン先（接触判定用） -->
              <geom name="pen_tip" type="sphere" size="0.003"
                    pos="0 0 -0.11" rgba="0 0 0 1"
                    contype="1" conaffinity="1"/>

              <!-- ペン先位置を JS から参照するための site -->
              <site name="pen_tip_site" pos="0 0 -0.11" size="0.004" rgba="0 0.3 1 1"/>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <!-- 位置サーボ（ctrlが目標関節角/位置） -->
  <actuator>
    <position name="act_shoulder" joint="shoulder" kp="80" kv="8"/>
    <position name="act_elbow" joint="elbow" kp="80" kv="8"/>
    <position name="act_wrist" joint="wrist" kp="40" kv="4"/>
    <position name="act_pen_z" joint="pen_z" kp="300" kv="30"/>
  </actuator>

  <keyframe>
    <key name="home" qpos="0 0.8 -0.8 0.03" ctrl="0 0.8 -0.8 0.03"/>
  </keyframe>
</mujoco>
